{
  "name": "naruto-online-browser",
  "version": "1.0.0",
  "description": "Unofficial Naruto Online browser",
  "license": "ISC",
  "author": "glennhenry",
  "type": "commonjs",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "package:win32": "electron-packager . \"Naruto Online Browser\" --platform=win32 --arch=ia32 --out=release --overwrite --asar --icon=resources/logo.ico --extra-resource=resources/pepflashplayer32.dll",
    "package:win64": "electron-packager . \"Naruto Online Browser\" --platform=win32 --arch=x64 --out=release --overwrite --asar --icon=resources/logo.ico --extra-resource=resources/pepflashplayer64.dll",
    "package:mac:x64": "electron-packager . \"Naruto Online Browser\" --platform=darwin --arch=x64 --out=release --overwrite --asar --icon=resources/logo.icns --extra-resource=resources/PepperFlashPlayer.plugin",
    "package:mac:arm64": "electron-packager . \"Naruto Online Browser\" --platform=darwin --arch=arm64 --out=release --overwrite --asar --icon=resources/logo.icns --extra-resource=resources/PepperFlashPlayer.plugin",
    "package:linux": "electron-packager . \"Naruto Online Browser\" --platform=linux --arch=x64 --out=release --overwrite --asar --icon=resources/logo.png --extra-resources=resources/libpepflashplayer.so"
  },
  "devDependencies": {
    "@electron/packager": "^18.4.4",
    "electron": "^11.5.0"
  }
}
